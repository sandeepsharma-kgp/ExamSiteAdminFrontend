
  <div ng-controller="subject1">
      <h2 style= "text-align : center; margin-bottom:25px"> Subject List </h2>
    <div class="row">
      <div class='col-sm-12'>
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th class="text-center">
                <input type="checkbox" ng-model="selectedAll" ng-click="checkAll()" />
              </th>
              <th>Subject ID</th>
              <th>Subject Name</th>
              <th>Class</th>
              <th>Board</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="sub in subjectList">
              <td class="text-center">
                <input type="checkbox" ng-model="subject.selected" ng-change="setSelectedSubject(subject)"/>
              </td>
              <td> [[sub.SID]] </td>
              <td> [[sub.subjectName]] </td>
              <td> [[sub.class]] </td>
              <td> [[sub.board]] </td>
              <td>  <a href="/subject/update/[[sub.SID]]" class="btn btn-primary" style='margin-right:25px'>Edit</a>
                <button class="btn btn-danger" ng-click="delete(sub.SID)">Remove</button>
              </td>

            </tr>
          </tbody>
        </table>
      </div>

    </div>
    <a class= "btn btn-primary" href= "/subject/add" style = "margin-bottom : 20px; margin-top : 20px"> Add Subject </a>
    <br>
    <a href ="/dashboard" > Go back </a>
    </br>

  </div>

  <!-- <script src="public\js\angularview.js"></script> -->

  <script>

  app.controller("subject1", function($scope) {
    $scope.name = "@Checking";
    getSubjects();
    function getSubjects() {
      $.get("/api/v1/subject/all",function(data){
        // console.log(data);
        $scope.subjectList = data;
        $scope.$apply();
      });
    }

    $scope.delete = function(id) {
      console.log(id);
      $.get("/api/v1/subject/delete/"+id,function(data){
        window.location.reload(true);
      });
    }


  });
  </script>
