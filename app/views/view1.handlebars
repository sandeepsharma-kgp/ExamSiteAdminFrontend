
  <div ng-controller="subject1">
      <h2 style= "text-align : center; margin-bottom:25px"> Subject List </h2>
    <div class="row">
      <div class='col-sm-12'>
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th class="text-center">
                <input type="checkbox" ng-model="selectedAll" ng-click="checkAll()" />
              </th>
              <th>Subject ID</th>
              <th>Subject Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="sub in subjectList">
              <td class="text-center">
                <input type="checkbox" ng-model="subject.selected" ng-change="setSelectedSubject(subject)"/>
              </td>
              <td>[[sub.subjectID]]</td>
              <td>[[sub.subjectName]]</td>
              <td><button class="btn btn-primary" ng-click="edit(sub.subject)" style='margin-right:25px'>Edit</button>
                <button class="btn btn-danger" ng-click="edit(subjectList)">Remove</button></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>

  </div>

  <script src="public\js\angularview.js"></script>

  <script>
  app.controller("subject1", function($scope) {
    $scope.name = "@Checking";
    $.get("/api/v1/subject/all",function(data){
      $scope.subjectList = data;
      $scope.$apply();


    });


  });

  </script>
