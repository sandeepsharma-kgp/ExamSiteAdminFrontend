<div class="container" ng-controller = "updateSubject">
  <h1 style="text-align: center"> Updating a subject </h1>
    <div class="form-group" style="width: 30%; margin: 25px auto">
      <form>
        <div class="form-group">
          <input type="text" class="form-control" name="SID" placeholder="Subject ID" ng-model = "SID">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="subjectName" placeholder=" New Subject Name" ng-model = "subjectName">
        </div>
        <div class="form-group">
          <button type="submit"class="btn btn-primary btn-lg btn-block" ng-click = "updateData()"> Submit </button>
        </div>
      </form>
    </div>
    <br>
      <div class="alert alert-success" role="alert" ng-show = "success">
        [[successMessage]]
      </div>
    </br>
  </div>
      <a href= "/subject/view"> Go back </a>



<script>

  app.controller("updateSubject", function($scope) {
    var url = window.location.href;
    url = url.split("/");
    $scope.SID = url[url.length - 1];
    console.log($scope.SID);
    $.get("/api/v1/subject/update/" + $scope.SID, function(data){
        console.log(data);
        if(data.length == 0) {

        } else {
          $scope.subjectList = data[0];
          $scope.SID = $scope.subjectList.SID;
          $scope.subjectName = $scope.subjectList.subjectName;
          console.log($scope.SID);
          console.log($scope.subjectName);
          $scope.$apply();

        }
    });
    $scope.updateData = function() {
      console.log("!");
      var data = {};
      data.SID = $scope.SID;
      data.subjectName = $scope.subjectName;
      $.post("/api/subject/update",data, function(result){
        console.log("Updated successfully");
        if(result.successMessage)
          $scope.success = true;
        console.log(result.successMessage);
        $scope.successMessage = result.successMessage;
      });
    }


  });

</script>
